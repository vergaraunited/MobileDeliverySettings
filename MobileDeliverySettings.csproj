<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>netstandard2.0</TargetFramework>
    <Version>1.1.0</Version>
    <PackageReleaseNotes>Fixed Logger path general</PackageReleaseNotes>
    <Description>Centralized settings.</Description>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="UMDGeneral" Version="1.2.6" />
    <PackageReference Include="Xam.Plugins.Settings" Version="3.1.1" />
  </ItemGroup>

  <ItemGroup>
    
  </ItemGroup>
 <ItemGroup Condition="'$(Configuration)' == 'Release'">
     <PackageReference Include="MobileDeliveryLogger" Version="1.2.0" />
    <PackageReference Include="UMDGeneral" Version="1.2.6" />
  </ItemGroup>
  
  <ItemGroup Condition="'$(Configuration)' != 'Release'">
    <ProjectReference Include="..\MobileDeliveryLogger\MobileDeliveryLogger.csproj" />
  </ItemGroup>
  
  <Target Name="PreBuild" BeforeTargets="PreBuildEvent">
    <Exec Command="nuget restore $(ProjectPath)" />
  </Target>
</Project>